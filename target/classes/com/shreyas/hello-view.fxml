<BorderPane style="-fx-background-color: #f1ffc4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shreyas.ViewController">
    <top>
        <HBox prefHeight="341.0" prefWidth="862.0" style="-fx-background-color: #8B4513;" BorderPane.alignment="CENTER">
            <children>
            <VBox prefHeight="341.0" prefWidth="159.0">
               <children>
                      <Button fx:id="pressToPlayButton" mnemonicParsing="false" onAction="#initializeGarden" prefHeight="25.0" prefWidth="166.0" style="-fx-background-color: B8E2F2;" text="Press to Play!">
                     <font>
                        <Font name="Chalkboard SE Light" size="13.0" />
                     </font>
                  </Button>
                      <Button fx:id="iterateDayButton" mnemonicParsing="false" onAction="#iterateDayWithTimer" prefHeight="26.0" prefWidth="166.0" style="-fx-background-color: #C7F6B6;" text="Start" />
                  <Button fx:id="finish" mnemonicParsing="false" onAction="#finish" prefHeight="26.0" prefWidth="166.0" style="-fx-background-color: F4C2C2;" text="Finish" />
                        <TextField editable="false" prefHeight="25.0" prefWidth="166.0" style="-fx-background-color: #7CC3a7;" text="Select Plant Type" />
                      <VBox prefHeight="100.0" prefWidth="159.0">
                          <children>
                              <RadioButton fx:id="roseButton" mnemonicParsing="false" selected="true" text="Rose">
                                  <toggleGroup>
                                      <ToggleGroup fx:id="plantType" />
                                  </toggleGroup>
                              </RadioButton>
                              <RadioButton fx:id="sunflowerButton" mnemonicParsing="false" selected="true" text="Sunflower" toggleGroup="$plantType" />
                              <RadioButton fx:id="lilyButton" mnemonicParsing="false" prefHeight="17.0" prefWidth="87.0" selected="true" text="Lily" toggleGroup="$plantType" />
                          </children>
                      </VBox>
               </children>
            </VBox>
            <VBox prefHeight="100.0" prefWidth="323.0">
               <children>
                      <Label fx:id="userInfoLabel" prefHeight="50.0" prefWidth="389.0" style="-fx-background-color: #8B4513;">
                          <font>
                              <Font name="System Bold" size="30.0" />
                          </font>
                  </Label>
                  <Label fx:id="label2" prefHeight="50.0" prefWidth="351.0" style="-fx-background-color: #8B4513;">
                     <font>
                        <Font name="AppleMyungjo Regular" size="23.0" />
                     </font>
                  </Label>
                  <VBox prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: #8B4513;" />
                  <Label fx:id="systemLabel" prefHeight="243.0" prefWidth="321.0" style="-fx-background-color: #8B4513;">
                     <font>
                        <Font size="23.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <GridPane fx:id="weatherGrid" prefHeight="341.0" prefWidth="231.0" style="-fx-background-color: #8B4513;">
              <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
            </GridPane>
            <Pane fx:id="imagePane" prefHeight="341.0" prefWidth="19.0" style="-fx-background-color: #8B4513;" />
                <Button fx:id="heatingButton" onAction="#adjustTemperature" style="-fx-background-color: B8E2F2;" text="Activate Heating" />
                <Button fx:id="sprinklersButton" onAction="#activateSprinklers" style="-fx-background-color: B8E2F2;" text="Activate Sprinklers" />
                <Button fx:id="pesticideButton" onAction="#applyPesticide" style="-fx-background-color: B8E2F2;" text="Apply Pesticide" />
                <Button fx:id="rainButton" mnemonicParsing="false" onAction="#activateRain" prefHeight="26.0" prefWidth="166.0" style="-fx-background-color: #ADD8E6;" text="Rain" />
            </children>
        </HBox>
    </top>
   <center>
        <GridPane fx:id="gardenGrid" gridLinesVisible="true" onMouseClicked="#plantPlants" style="-fx-background-color: #008000;" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
